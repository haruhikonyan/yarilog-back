<h1>{{ title }}</h1>
<a href="/admin/instruments/new" class="btn btn-primary" role="button" aria-disabled="true">新規作成</a>

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">楽器名</th>
      <th scope="col">略記</th>
      <th scope="col">並び順</th>
      <th scope="col">詳細</th>
      <th scope="col">操作</th>
    </tr>
  </thead>
  <tbody>
    {{#each instruments}}
    <tr>
      <th scope="row">{{ id }}</th>
      <td>{{ name }}</td>
      <td>{{ shortName }}</td>
      <td>{{ sortOrder }}</td>
      <td>{{ description }}</td>
      <td>
        <a href="/admin/instruments/{{ id }}/edit" class="btn btn-secondary" role="button" aria-disabled="true">編集</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>