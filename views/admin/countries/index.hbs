<h1>{{ title }}</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">国名</th>
      <th scope="col">詳細</th>
    </tr>
  </thead>
  <tbody>
    {{#each countries}}
      <tr>
        <th scope="row">{{ id }}</th>
        <td>{{ name }}</td>
        <td>{{ description }}</td>
      </tr>
    {{/each}}
  </tbody>
</table>