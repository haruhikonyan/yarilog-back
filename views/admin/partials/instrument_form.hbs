<form>
  <div class="form-group">
    <label for="name">楽器名</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="トランペット" value="{{ instrument.name}}">
  </div>
  <div class="form-group">
    <label for="shortName">略記</label>
    <input type="text" class="form-control" id="shortName" name="shortName" placeholder="Tp" value="{{ instrument.shortName}}">
  </div>
  <button type="submit" formaction="{{formaction}}" formmethod="POST" class="btn btn-primary">保存</button>
  {{#if showContinueButton}}
    <button type="submit" formaction="{{formaction}}?isContinue=true" formmethod="POST" class="btn btn-primary">保存して作成を続ける</button>
  {{/if}}
</form>