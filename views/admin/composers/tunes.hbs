<h1>{{ title }}</h1>
<a href="/admin/tunes/new?composerId={{ composerId }}" class="btn btn-primary" role="button"
  aria-disabled="true">新規作成</a>
<table class="table">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">id</th>
        <th scope="col">曲名</th>
        <th scope="col">演奏形態</th>
        <th scope="col">ジャンル</th>
        <th scope="col">詳細</th>
        <th scope="col">操作</th>
      </tr>
    </thead>
    <tbody>
      {{#each tunes}}
      <tr>
        <th scope="row">{{ id }}</th>
        <td>{{ title }}</td>
        <td>{{ playstyle.name }}</td>
        <td>
          {{#each genres}}
          {{name}},
          {{/each}}
        </td>
        <td>{{ description }}</td>
        <td>
          <a href="/admin/tunes/{{ id }}/edit" class="btn btn-secondary" role="button" aria-disabled="true">編集</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</table>